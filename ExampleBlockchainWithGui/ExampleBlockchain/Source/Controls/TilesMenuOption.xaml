<controls:UserControlWithNotifyProperty x:Class="BlockchainApp.Source.Controls.TilesMenuOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:controls="clr-namespace:BlockchainApp.Source.Controls"
             mc:Ignorable="d" DataContext='{Binding RelativeSource={RelativeSource Self}}'>
    <Grid>
        <mah:Tile Style="{StaticResource BaseTile}" ContentTemplate="{StaticResource TilesMenuOptionTileDataTemplate}" >
        </mah:Tile>
    </Grid>
</controls:UserControlWithNotifyProperty>
